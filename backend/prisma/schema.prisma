// backend/prisma/schema.prisma
// Multi-tenant architecture with Business entity and Subscription Management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================================
// BUSINESS MODEL (Multi-tenant core with Subscription Management)
// ============================================================================
model Business {
  id                  Int      @id @default(autoincrement())
  slug                String   @unique  // Subdomain: chrenisfarm, houseofqg, etc.
  businessName        String
  businessType        String   @default("food")
  
  // ✅ SUBSCRIPTION & STATUS MANAGEMENT (Enhanced)
  isActive            Boolean  @default(true)
  suspendedAt         DateTime?
  suspensionReason    String?
  
  // ✅ NEW: Comprehensive Subscription Fields
  subscriptionPlan    String   @default("none")  // none, free_trial, monthly, annual
  subscriptionStartDate DateTime?               // When paid subscription started
  subscriptionExpiry  DateTime?                 // When subscription expires
  trialStartDate      DateTime?                 // When free trial started
  trialEndsAt         DateTime?                 // When 14-day trial ends
  lastPaymentDate     DateTime?                 // Date of last payment
  subscriptionNotes   String?                   // Admin notes about subscription
  
  businessMotto       String?
  phone               String
  email               String?
  address             String?
  description         String?
  logo                String?
  
  // Theme
  primaryColor        String   @default("#10B981")
  secondaryColor      String   @default("#F59E0B")
  
  // Localization
  currency            String   @default("NGN")
  language            String   @default("en")
  supportedLanguages  Json?
  autoDetectLanguage  Boolean  @default(true)
  defaultLanguage     String   @default("en")
  
  // Contact & Social
  whatsappNumber      String
  facebookUrl         String?
  twitterUrl          String?
  instagramUrl        String?
  youtubeUrl          String?
  linkedinUrl         String?
  tiktokUrl           String?
  
  // Footer
  footerText          String?
  footerCopyright     String?  @default("© {year} All rights reserved.")
  footerAddress       String?
  footerEmail         String?
  footerPhone         String?
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // Relationships
  users               User[]
  products            Product[]
  orders              Order[]
  notifications       Notification[]
  
  @@index([slug])
  @@index([isActive])
  @@index([subscriptionExpiry])
  @@index([subscriptionPlan])
  @@index([trialEndsAt])
}

// ============================================================================
// USER MODEL (with businessId)
// ============================================================================
model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  role         String    @default("staff")  // super-admin, admin, staff
  active       Boolean   @default(true)
  firstName    String?
  lastName     String?
  phone        String?
  lastLogin    DateTime?
  
  // Multi-tenant link
  businessId   Int?      // NULL for super-admin, required for admin/staff
  business     Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  // Relationships
  confirmedPayments Order[] @relation("PaymentConfirmer")

  @@index([email])
  @@index([active])
  @@index([businessId])
  @@index([role])
}

// ============================================================================
// PRODUCT MODEL (with businessId)
// ============================================================================
model Product {
  id          Int         @id @default(autoincrement())
  name        String
  price       Float
  stock       Int
  description String?
  imageUrl    String?
  featured    Boolean     @default(false)
  
  // Multi-tenant link
  businessId  Int
  business    Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  ratings     ProductRating[]
  orderItems  OrderItem[]
  images      ProductImage[]

  @@index([createdAt])
  @@index([stock])
  @@index([featured])
  @@index([businessId])
}

// ============================================================================
// ORDER MODEL (with businessId)
// ============================================================================
model Order {
  id                  Int         @id @default(autoincrement())
  customerName        String
  phone               String
  address             String?
  email               String?
  message             String?
  totalAmount         Float
  paymentStatus       String      @default("PENDING")
  paymentMethod       String?
  paymentConfirmedAt  DateTime?
  paymentConfirmedBy  Int?
  paymentConfirmer    User?       @relation("PaymentConfirmer", fields: [paymentConfirmedBy], references: [id])
  status              String      @default("PENDING")
  statusHistory       Json?
  currency            String      @default("NGN")
  notes               String?
  
  // Multi-tenant link
  businessId          Int
  business            Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  items               OrderItem[]

  @@index([createdAt])
  @@index([phone])
  @@index([paymentStatus])
  @@index([status])
  @@index([businessId])
}

model OrderItem {
  id          Int     @id @default(autoincrement())
  orderId     Int
  productId   Int
  quantity    Int
  unitPrice   Float
  order       Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

// ============================================================================
// DEPRECATED: BusinessSettings (keeping for backward compatibility)
// This will be migrated to Business model
// ============================================================================
model BusinessSettings {
  id                Int      @id @default(autoincrement())
  slug              String   @unique
  businessName      String
  businessType      String   @default("food")
  businessMotto     String?
  phone             String
  email             String?
  address           String?
  description       String?
  logo              String?
  primaryColor      String   @default("#10B981")
  secondaryColor    String   @default("#F59E0B")
  currency          String   @default("NGN")
  language          String   @default("en")
  supportedLanguages Json?
  autoDetectLanguage Boolean @default(true)
  defaultLanguage   String   @default("en")
  whatsappNumber    String
  facebookUrl       String?
  twitterUrl        String?
  instagramUrl      String?
  youtubeUrl        String?
  linkedinUrl       String?
  tiktokUrl         String?
  footerText        String?
  footerCopyright   String?  @default("© {year} All rights reserved.")
  footerAddress     String?
  footerEmail       String?
  footerPhone       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// ============================================================================
// SUPPORTING MODELS
// ============================================================================
model ProductRating {
  id          Int      @id @default(autoincrement())
  productId   Int
  phone       String
  rating      Int
  comment     String?
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, phone])
  @@index([productId])
  @@index([phone])
}

model Notification {
  id         Int       @id @default(autoincrement())
  type       String    // 'order', 'payment', 'stock', 'system', 'subscription'
  title      String
  message    String
  link       String?
  orderId    Int?
  productId  Int?
  read       Boolean   @default(false)
  readAt     DateTime?
  
  // Multi-tenant link
  businessId Int?
  business   Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime  @default(now())
  
  @@index([read])
  @@index([createdAt])
  @@index([businessId])
}

model ProductImage {
  id          Int      @id @default(autoincrement())
  productId   Int
  imageUrl    String
  order       Int      @default(0)
  isPrimary   Boolean  @default(false)
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([order])
}

model OnboardingRequest {
  id              Int       @id @default(autoincrement())
  businessName    String
  businessType    String
  ownerName       String
  ownerEmail      String
  ownerPhone      String
  description     String?
  preferredSlug   String?

  // For storing credentials after approval
  adminCreated    Boolean   @default(false)
  adminUserId     Int?
  temporaryPassword String?
  
  status          String    @default("pending") // pending, approved, rejected
  reviewedBy      Int?
  reviewedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([status])
  @@index([createdAt])
}
