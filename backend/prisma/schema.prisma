// backend/prisma/schema.prisma
// Run after any changes:
//   npx prisma migrate dev --name add_storefront_fields
//   npx prisma generate

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================================================
// BUSINESS MODEL
// ============================================================================
model Business {
  id                  Int      @id @default(autoincrement())
  slug                String   @unique
  businessName        String
  businessType        String   @default("food")

  // Status & subscription
  isActive            Boolean  @default(true)
  suspendedAt         DateTime?
  suspensionReason    String?
  subscriptionPlan    String   @default("none")
  subscriptionStartDate DateTime?
  subscriptionExpiry  DateTime?
  trialStartDate      DateTime?
  trialEndsAt         DateTime?
  lastPaymentDate     DateTime?
  subscriptionNotes   String?

  businessMotto       String?
  phone               String
  email               String?
  address             String?
  description         String?
  logo                String?

  // ✅ NEW: Storefront display fields
  businessHours       String?           // e.g. "Mon–Fri: 9am–6pm"
  taxRate             Float    @default(0)
  deliveryFee         Float    @default(0)

  // Theme
  primaryColor        String   @default("#10B981")
  secondaryColor      String   @default("#F59E0B")

  // Localization
  currency            String   @default("NGN")
  language            String   @default("en")
  supportedLanguages  Json?
  autoDetectLanguage  Boolean  @default(true)
  defaultLanguage     String   @default("en")

  // Contact & Social
  whatsappNumber      String
  facebookUrl         String?
  twitterUrl          String?
  instagramUrl        String?
  youtubeUrl          String?
  linkedinUrl         String?
  tiktokUrl           String?

  // Footer
  footerText          String?
  footerCopyright     String?  @default("© {year} All rights reserved.")
  footerAddress       String?
  footerEmail         String?
  footerPhone         String?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relationships
  users               User[]
  products            Product[]
  orders              Order[]
  notifications       Notification[]

  @@index([slug])
  @@index([isActive])
  @@index([subscriptionExpiry])
  @@index([subscriptionPlan])
  @@index([trialEndsAt])
}

// ============================================================================
// USER MODEL
// ============================================================================
model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  role         String    @default("staff")
  active       Boolean   @default(true)
  firstName    String?
  lastName     String?
  phone        String?
  lastLogin    DateTime?

  businessId   Int?
  business     Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  confirmedPayments Order[] @relation("PaymentConfirmer")

  @@index([email])
  @@index([active])
  @@index([businessId])
  @@index([role])
}

// ============================================================================
// PRODUCT MODEL
// ============================================================================
model Product {
  id          Int         @id @default(autoincrement())
  name        String
  price       Float
  stock       Int
  description String?
  imageUrl    String?
  featured    Boolean     @default(false)

  // ✅ NEW: Storefront fields
  isAvailable Boolean     @default(true)   // controls visibility in storefront
  category    String?                       // used for category filter tabs

  businessId  Int
  business    Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  ratings     ProductRating[]
  orderItems  OrderItem[]
  images      ProductImage[]

  @@index([createdAt])
  @@index([stock])
  @@index([featured])
  @@index([businessId])
  @@index([isAvailable])   // ✅ NEW
  @@index([category])      // ✅ NEW
}

// ============================================================================
// ORDER MODEL
// ============================================================================
model Order {
  id                  Int         @id @default(autoincrement())
  customerName        String
  phone               String
  address             String?
  email               String?
  message             String?
  totalAmount         Float
  paymentStatus       String      @default("PENDING")
  paymentMethod       String?
  paymentConfirmedAt  DateTime?
  paymentConfirmedBy  Int?
  paymentConfirmer    User?       @relation("PaymentConfirmer", fields: [paymentConfirmedBy], references: [id])
  status              String      @default("PENDING")
  statusHistory       Json?
  currency            String      @default("NGN")
  notes               String?

  businessId          Int
  business            Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  items               OrderItem[]

  @@index([createdAt])
  @@index([phone])
  @@index([paymentStatus])
  @@index([status])
  @@index([businessId])
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  unitPrice Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

// ============================================================================
// DEPRECATED: BusinessSettings (keeping for backward compatibility)
// ============================================================================
model BusinessSettings {
  id                Int      @id @default(autoincrement())
  slug              String   @unique
  businessName      String
  businessType      String   @default("food")
  businessMotto     String?
  phone             String
  email             String?
  address           String?
  description       String?
  logo              String?
  primaryColor      String   @default("#10B981")
  secondaryColor    String   @default("#F59E0B")
  currency          String   @default("NGN")
  language          String   @default("en")
  supportedLanguages Json?
  autoDetectLanguage Boolean @default(true)
  defaultLanguage   String   @default("en")
  whatsappNumber    String
  facebookUrl       String?
  twitterUrl        String?
  instagramUrl      String?
  youtubeUrl        String?
  linkedinUrl       String?
  tiktokUrl         String?
  footerText        String?
  footerCopyright   String?  @default("© {year} All rights reserved.")
  footerAddress     String?
  footerEmail       String?
  footerPhone       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// ============================================================================
// SUPPORTING MODELS
// ============================================================================
model ProductRating {
  id        Int      @id @default(autoincrement())
  productId Int
  phone     String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, phone])
  @@index([productId])
  @@index([phone])
}

model Notification {
  id         Int       @id @default(autoincrement())
  type       String
  title      String
  message    String
  link       String?
  orderId    Int?
  productId  Int?
  read       Boolean   @default(false)
  readAt     DateTime?

  businessId Int?
  business   Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)

  createdAt  DateTime  @default(now())

  @@index([read])
  @@index([createdAt])
  @@index([businessId])
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  imageUrl  String
  order     Int      @default(0)
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([order])
}

model OnboardingRequest {
  id                Int       @id @default(autoincrement())
  businessName      String
  businessType      String
  ownerName         String
  ownerEmail        String
  ownerPhone        String
  description       String?
  preferredSlug     String?
  adminCreated      Boolean   @default(false)
  adminUserId       Int?
  temporaryPassword String?
  status            String    @default("pending")
  reviewedBy        Int?
  reviewedAt        DateTime?
  rejectionReason   String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([status])
  @@index([createdAt])
}
